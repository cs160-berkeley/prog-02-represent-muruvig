<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fred_img"
        android:src="@drawable/eagle_seal"
        android:contentDescription="Eagle Seal"
        android:layout_marginBottom="263dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="135dp"
        android:layout_height="60dp"
        android:id="@+id/go_button"
        android:background="@drawable/go_button"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="110dp"
        android:onClick="triggerLocalList"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="27dp"
        android:id="@+id/current_location"
        android:background="@drawable/current_location_button"
        android:onClick="triggerLocalList"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/fred_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="or"
        android:textColor="#000000"
        android:id="@+id/textView"
        android:layout_below="@+id/current_location"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:textColor="#777777"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:hint="Enter Zip Code" />

</RelativeLayout>
